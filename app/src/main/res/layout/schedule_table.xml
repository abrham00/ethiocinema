                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/d28"
                        android:gravity="center" android:layout_marginLeft="20dp"
                        android:background="@drawable/tableborder"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/d38"
                        android:gravity="center" android:layout_marginLeft="20dp"
                        android:background="@drawable/tableborder"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_margin="10dp"
                    android:background="@drawable/tableborder">
                <TextView
                        android:text="12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView15"
                        android:gravity="center" android:background="@drawable/tableborder"/>
