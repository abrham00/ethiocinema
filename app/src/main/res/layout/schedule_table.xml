                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/d112"
                        android:gravity="center" android:layout_marginLeft="30dp"
                        android:background="@drawable/tableborder"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/d212" android:gravity="center"
                        android:layout_marginLeft="20dp" android:background="@drawable/tableborder"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/d312"
                        android:background="@drawable/tableborder"
                        android:gravity="center" android:layout_marginLeft="20dp"/>
            </TableRow>
        </TableLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>