<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:layout_margin="10dp"
              android:background="@android:color/holo_red_dark">
    <TextView
            android:text="Cinema Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="7dp" android:layout_marginStart="7dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textSize="18sp" android:textStyle="bold" android:textColor="@android:color/white"
            android:id="@+id/cinema_name"/>
    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:cardBackgroundColor="@android:color/white" app:cardElevation="5dp"
            app:strokeColor="@android:color/black" app:strokeWidth="1dp">
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                      android:layout_margin="10dp"
                      android:background="@drawable/tableborder">
                <TextView
                        android:text="Time"
                        android:background="@drawable/tableborder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView10"
                        android:gravity="center"/>
                <TextView
                        android:text="Today"
                        android:background="@drawable/tableborder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView22"
                        android:gravity="center" android:layout_marginLeft="30dp"/>
                <TextView
                        android:text="Tommorow"
                        android:background="@drawable/tableborder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView6"
                        android:gravity="center" android:layout_marginLeft="20dp"/>
                <TextView
                        android:text="Day After Tommorow"
                        android:layout_width="wrap_content"
                        android:background="@drawable/tableborder"
                        android:layout_height="wrap_content" android:id="@+id/textView28"
                        android:gravity="center" android:layout_marginLeft="20dp"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_margin="10dp" android:background="@drawable/tableborder">
                <TextView
                        android:text="6"
                        android:background="@drawable/tableborder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView"
                        android:gravity="center"/>
                <TextView
                        android:text="TextView"
                        android:background="@drawable/tableborder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/d16"
                        android:gravity="center" android:layout_marginLeft="30dp"/>
                <TextView
                        android:text="TextView"
                        android:background="@drawable/tableborder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/d26"
                        android:gravity="center" android:layout_marginLeft="20dp"/>
                <TextView
                        android:text="TextView"
                        android:background="@drawable/tableborder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/d36"
                        android:gravity="center" android:layout_marginLeft="20dp"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                      android:layout_margin="10dp" android:background="@drawable/tableborder">
                <TextView
                        android:text="10"
                        android:background="@drawable/tableborder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView14"
                        android:gravity="center"/>
                <TextView
                        android:text="TextView"
                        android:background="@drawable/tableborder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/d110"
                        android:gravity="center" android:layout_marginLeft="30dp"/>
                <TextView
                        android:text="TextView"
                        android:background="@drawable/tableborder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/d210"
                        android:gravity="center" android:layout_marginLeft="20dp"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:background="@drawable/tableborder"
                        android:layout_height="wrap_content"
                        android:gravity="center" android:id="@+id/d310" android:layout_marginLeft="20dp"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                      android:layout_margin="10dp" android:background="@drawable/tableborder">
                <TextView
                        android:text="8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView13"
                        android:gravity="center" android:background="@drawable/tableborder"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/d18"
                        android:gravity="center" android:layout_marginLeft="30dp"
                        android:background="@drawable/tableborder"/>
